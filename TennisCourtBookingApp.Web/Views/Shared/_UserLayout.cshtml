<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TennisCourtBookingApp.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="~/css/sweetalert2.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/TennisCourtBookingApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
</head>
<body style="background-color:gainsboro">
    <header class="container-fluid position-fixed" style="top: 0; padding: 0px; z-index:2;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" style=" background-color:darkgray; ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="UserDetails"><i class="fa-solid fa-table-tennis-paddle-ball fa-xl"></i>TennisCourtBookingApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size:large;font-weight:bold" asp-area="" asp-controller="User" asp-action="UserDetails"><i class="fa-solid fa-house fa-xl"></i>Home</a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight:bold;font-size:large" asp-action="ListedCourt" asp-controller="User" method="Get">Book Court</a>
                        </li>
                    </ul>
                    <div class="row">
                       
                        <div class="col-6">
                            <a class="nav-link " style="color: white; border: double 2px;border-radius:15px;" data-toggle="tooltip" title="Profile" onclick="TennisCourtBookingApp.User.UserProfile()" ><i class="fa-solid fa-user fa-xl" ></i></a>
                        </div>
                        <div class="col-6">
                            <a class="nav-link  btn btn-primary" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:60px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TennisCourtBookingApp.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" asp-append-version="true"></script>
    <script src="~/js/Themes/jquery.min.js"></script>
    <script src="~/js/Themes/jquery.validate.min.js"></script>
    <script src="~/js/Themes/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" asp-append-version="true"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/Datatable/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    @*<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>*@
    @*<script src="https://code.jquery.com/jquery-3.6.0.min.js" asp-append-version="true"></script>*@
    <script src="~/js/Custom/TennisCourtBookingApp.js" asp-append-version="true"></script>

    <script src="~/js/Custom/TennisCourtBookingApp.Common.js" asp-append-version="true"></script>
    <script src="~/js/Custom/TennisCourtBookingApp.Booking.js" asp-append-version="true"></script>
    <script src="~/js/Custom/TennisCourtBookingApp.User.js" asp-append-version="true"></script>
    <script src="~/js/Custom/TennisCourtBookingApp.TennisCourt.js" asp-append-version="true"></script>
    <script src="~/js/Themes/aes.js"></script>
    <script src="~/js/Themes/sweetalert2.all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    function UrlContent(url) {
        return "@Url.Content("~/")" + url
    }
</script>
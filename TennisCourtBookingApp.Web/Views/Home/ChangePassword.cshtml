@*<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">*@
<div id="ModalShow" class="modal fade bs-example-modal-lg" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="max-width: 500px; margin: auto;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:lightblue">
                <h5 class="modal-title">Change Password</h5>

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @*@{
                    if (ViewBag.Message != null)
                    {
                        <p class="bg-danger">@ViewBag.Message</p>
                    }
                }*@
                <form asp-action="Login" asp-controller="Home" method="post" id="ChangePassword">
                    <div>
                        <label class="form-label" asp-for="TennisCourtBookingUserModel.Email">User Name</label>
                        <input type="email" asp-for="TennisCourtBookingUserModel.Email" class="form-control" autocomplete="off" />
                    </div>

                    <div>
                        <label class="form-label" asp-for="TennisCourtBookingUserModel.Password">User Password</label>
                        <input type="password" asp-for="TennisCourtBookingUserModel.Password" class="form-control" id="UserPassword" autocomplete="off" />
                    </div>
                </form>
                <br />
                <div class="row">
                    <div class="col-5">
                        <button type="button" class="btn btn-primary" id="logIn" onclick="TennisCourtBookingApp.Common.ChangePasswordPost()">Submit</button>
                    </div>
                </div>

            </div>
            <div class="modal-footer" style="background-color:lightblue">
                <button asp-action="Home" asp-controller="Index" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/themes/jquery.min.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
<script>
    $(document).ready(function () {
        $("#ModalShow").modal("show");
    });

</script>


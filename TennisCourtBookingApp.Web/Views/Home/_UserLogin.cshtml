<div class="modal-header" style="background-color:lightblue">
    <h5 class="modal-title">Login</h5>

    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

</div>
@{

    if (TempData["Message"] != null)
    {
        <br />
        <p class="bg-danger" style="margin-bottom:0px;margin-top:0px;margin-left:5px;margin-right:5px;">@TempData["Message"]</p>
    }

}
<div class="modal-body">

    <form method="post" id="UserLogin">
        <label class="form-label" asp-for="TennisCourtBookingUserModel.Email">UserName</label>
        <div class="input-group mb-3">

            <button class="input-group-text" type="button" id="basic-addon"> <i class="fa-solid fa-user">  </i></button>
            <input type="email" asp-for="TennisCourtBookingUserModel.Email" class="form-control" placeholder="Enter  Email" />
        </div>

        <label class="form-label" asp-for="TennisCourtBookingUserModel.Password">Password</label>
        <div class="input-group mb-3 ">

            <button class="input-group-text " type="button" id="eye-icon">
                @*<span class="eye-icon" id="eyeopen" data-toggle="tooltip" title="Show Password">*@
                    <i class="fas fa-eye"></i>
                @*</span>*@
            </button>
            <input type="password" asp-for="TennisCourtBookingUserModel.Password" class="form-control" id="UserPassword" autocomplete="off" placeholder="Enter Password"  style="box-decoration-break:initial;"/>
            @*<span class="eye-icon" id="eyeopen" data-toggle="tooltip" title="Show Password">
                <i class="fas fa-eye"></i>
            </span>*@



        </div>
        <label class="form-label" asp-for="CaptchaCode">Captcha</label>
        <div class="form-group row">

            <div class="row col-12">

                <div class="input-group mb-3 col-12">
                    <button class="input-group-text" type="button" id="basic-add"><i class="fa-solid fa-pen"></i></button>
                    <input type="text" id="txtCaptcha" style="width:10px;" asp-for="CaptchaCode" class="form-control form-control-lg" placeholder="Enter your captcha" aria-label="Captcha" aria-describedby="inputGroupPrepend" maxlength="4"
                           onkeypress="return TennisCourtBookingApp.Common.isNumber(event)" onkeyup="event.keyCode === 13 ? TennisCourtBookingApp.Common.CaptchaCheck() : null" autocomplete="off" required>


                    <p>&nbsp;&nbsp;</p>


                    <button class="input-group-text" type="button" id="basic-addon4" onclick="TennisCourtBookingApp.Common.RefreshCaptcha()"><i class="fa-solid fa-arrows-rotate"></i></button>
                    <img src="@Model.CaptchaImage" alt="" class="imgCaptcha" height="50" width="99" />
                </div>
            </div>
        </div>

    </form>
    <div class="row">
        <div class="col-8">
            <button type="button" class="btn btn-primary " style="width:50%;" id="logIn" onclick="TennisCourtBookingApp.Common.CaptchaCheck()">Login</button>
        </div>
        <div class="col-4">

        </div>
    </div>

</div>
<div style="margin:10px;">
    <a style=" cursor: pointer; color: #0066cc;text-decoration:underline; " onclick="TennisCourtBookingApp.Common.SignUpGet()">If you have not Registered ! Click Here</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


    @*<button type="button" class=" btn btn-outline-primary" onclick="SignUpGet()">SignUp</button>*@

    <a style=" cursor: pointer; color: #0066cc;" onclick="TennisCourtBookingApp.Common.ResetPasswordGet()"><i class="fa-solid fa-lock"> </i>  Forgot Password ?</a>
</div>
<div class="modal-footer" style="background-color:lightblue">



    <button asp-action="Home" asp-controller="Index" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
<div>

</div>



@*<script src="~/js/themes/jquery.min.js"></script>*@
<script>
    $(document).ready(function () {
        // Target the eye icon and password input field
        var eyeIcon = $('#eye-icon');
        var passwordInput = $('#UserPassword');
        // Toggle password visibility on eye icon click
        eyeIcon.click(function () {
            var type = passwordInput.attr('type');
            if (type === 'password') {
                passwordInput.attr('type', 'text');
                eyeIcon.html('<i class="fa-solid fa-eye-slash"></i>');
                eyeIcon.attr('title', 'Hide Password');
            } else {
                passwordInput.attr('type', 'password');
                eyeIcon.html('<i class="fas fa-eye"></i>');
                eyeIcon.attr('title', 'Show Password');

            }
            //eyeIcon.tooltip('hide').tooltip('show');
        });
    });
</script>

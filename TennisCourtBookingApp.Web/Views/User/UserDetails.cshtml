@{
    Layout = "_UserLayout";
}




<h2>Your Booking Details</h2>
<br />
<div class="input-group mb-3 row">
    <div class="col-4">
        <label>Search : </label>
        <input type="text" id="UserBookingExtraSearch" style="background: transparent;background-color:transparent;" onkeyup="TennisCourtBookingApp.User.GetUserBooking(1,this)" />
    </div>
    <div class="col-4">
        <label>Status</label>
        <select id="Status" name="status" style="background-color:lightgray;" onchange="TennisCourtBookingApp.User.GetUserBooking(this)">
            <option value="1">All</option>
            <option value="2">Pending</option>
            <option value="3">Reject</option>
            <option value="4">Confirm</option>
        </select>
    </div>
</div>
<div class="mt-3" style="background-color:lightgray;">

  
    <table class="table table-striped table-bordered" id="UserBookings">
        <thead>
            <tr>
                <th>Tennis Court Name</th>
                <th>Address</th>
                <th>Booking Date</th>
                <th>Booking Time</th>
                <th>Status</th>
                <th>Action</th>
                <th>Download Ticket</th>
            </tr>
        </thead>

    </table>
</div>

<script src="~/js/Themes/jquery.min.js"></script>

